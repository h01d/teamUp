<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:background="?android:selectableItemBackground"
    android:padding="8dp">

    <View
        android:id="@+id/ghost_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#eee" />

    <View
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/ghost_image"
        android:background="#eee"/>

    <View
        android:id="@+id/ghost_ratingbar"
        android:layout_width="80dp"
        android:layout_height="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#eee"/>

    <View
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_marginEnd="4dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/ghost_ratingbar"
        android:background="#eee"/>

    <LinearLayout
        android:id="@+id/l_rating_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ghost_image"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/ghost_image"
        android:orientation="horizontal"
        android:weightSum="3">

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#eee"/>

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="#eee"/>

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="#eee"/>

    </LinearLayout>

    <View
        android:id="@+id/ghost_date"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/ghost_image"
        android:layout_alignParentEnd="true"
        android:background="#eee"/>

    <View
        android:id="@+id/ghost_comment"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/ghost_image"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/ghost_date"
        android:background="#eee"/>
</RelativeLayout>